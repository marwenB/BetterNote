<% action = (@notebook.new_record?) ?
      notebooks_url :
      notebook_url(@notebook) %>
<% button_value = (@notebook.new_record?) ?
      "Create New Notebook" : "Save" %>

<form action="<%= action %>" method="post" class="notebook group">
  <%= auth_token %>

  <% unless @notebook.new_record? %>
    <input type="hidden" name="_method" value="put">
  <% end %>

  <div class="input">
    <label for="notebook-name">Notebook Name</label>
    <input type="text" name="notebook[name]"
        id="notebook-name" value="<%= @notebook.name %>">
  </div>

  <div class="submit">
    <input type="submit" value="<%= button_value %>">
  </div>
</form>