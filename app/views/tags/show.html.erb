<section class="notes-list">
  <div class="notes-list-header">
    <i class='fa fa-tag fa-lg'></i>&nbsp;
    <%= @tag.name %>
  </div>
  <ul class="notes">
    <% @tag.notes.each do |note| %>
      <li>
        <a href="<%= tag_url(@tag, note_id: note.id) %>">
          <%= render partial: "notes/preview", locals: { note: note } %>
        </a>
      </li>
    <% end %>
  </ul>
</section>

</div> <!-- closes "left-absolute div" -->

<% if @note || @tag.notes.first %>
  <%= render partial: "notes/show",
    locals: { note: @note || @tag.notes.first } %>
<% end %>