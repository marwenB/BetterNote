<% action = (@tag.new_record?) ?
      tags_url : tag_url(@tag) %>
<% button_value = (@tag.new_record?) ?
      "Create New Tag" : "Update Tag" %>

<form action="<%= action %>" method="post" class="tag group">
  <%= auth_token %>

  <% unless @tag.new_record? %>
    <input type="hidden" name="_method" value="put">
  <% end %>


  <div class="input">
    <label for="notebook-name">Tag Name</label>
    <input type="text" name="notebook[name]"
        id="notebook-name" value="<%= @tag.name %>">
  </div>

  <div class="submit">
    <input type="submit" value="<%= button_value %>">
  </div>
</form>