<article class="sidebar-item">
  <div class="sidebar-header group">
    <div class="sidebar-header-left">
      <i class="fa fa-caret-down"></i>&nbsp;
      Notebooks
    </div>
    <div class="sidebar-header-right dropdown-parent">
      <i class="fa fa-toggle-down dropdown"></i>
      <ul class="options-dropdown hidden">
        <li>
          <div class="show-modal"
              data-action="create-notebook"
              data-item-id="nil">
            New Notebook...
          </div>
        </li>
      </ul>
    </div>
  </div>

  <ul class="sidebar-list">
    <li class="group">
      <div class="sidebar-entry-left">
        <a href="/#/notes" class="group">
            <i class='fa fa-book fa-lg'></i>&nbsp;
            All Notes (<%= notes.length %>)
        </a>
      </div>
    </li>
    <% notebooks.each(function(notebook) { %>
      <li class="group dropdown-parent">
        <div class="sidebar-entry-left group">
          <a href="<%= "/#/notebooks/" + notebook.get("id") %>">
            <div class="notebook-name">
              <i class='fa fa-book fa-lg'></i>&nbsp;
              <%= notebook.get("name") %>&nbsp;
            </div>
            <span class="notebook-notes-count">
              (<%= notebook.notes.length %>)
            </span>
          </a>
          <ul class="options-dropdown hidden">
            <li>
              <div class="show-modal"
                  data-action="edit-notebook"
                  data-item-id="<%= notebook.get("id") %>">
                Rename...
              </div>
            </li>
            <li>
              <div class="show-modal"
                  data-action="delete-notebook"
                  data-item-id="<%= notebook.get("id") %>">
                Delete Notebook
              </div>
            </li>
          </ul>
        </div>
        <div class="sidebar-entry-right">
          <i class='fa fa-toggle-down dropdown'></i>
        </div>
      </li>
    <% }) %>
  </ul>
</article>

<article class="sidebar-item">
  <div class="sidebar-header group">
    <div class="sidebar-header-left">
      <i class="fa fa-caret-down"></i>&nbsp;
      Tags
    </div>
