<% action = (@notebook.new_record?) ?
      user_notebooks_url(current_user) :
      user_notebook_url(current_user, @notebook) %>
<% button_value = (@notebook.new_record?) ?
      "Create New Notebook" : "Update Notebook" %>

<form action="<%= action %>" method="post" class="notebook">
  <%= auth_token %>

  <% unless @notebook.new_record? %>
    <input type="hidden" name="_method" value="put">
  <% end %>

  <div class="input">
    <label for="notebook-name">Name</label>
    <input type="text" name="notebook[name]"
        for="notebook-name" value="<%= @notebook.name %>">
  </div>

  <div class="submit">
    <input type="submit" value="<%= button_value %>">
  </div>
</form>