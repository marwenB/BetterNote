<% action = (@tag.new_record?) ?
      user_tags_url(current_user) :
      user_tag_url(current_user, @tag) %>
<% button_value = (@tag.new_record?) ?
      "Create New Tag" : "Update Tag" %>

<form action="<%= action %>" method="post">
  <%= auth_token %>

  <% unless @tag.new_record? %>
    <input type="hidden" name="_method" value="put">
  <% end %>

  <label>
    Name
    <input type="text" name="tag[name]" value="<%= @tag.name %>">
  </label>
  <br>

  <input type="submit" value="<%= button_value %>">
</form>