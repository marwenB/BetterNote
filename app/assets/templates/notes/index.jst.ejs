<div class="notes-list-header">
  <% if (type === "all") { %>
    <i class="fa fa-book"></i>
    All Notes
  <% } else if (type === "notebook") { %>
    <i class="fa fa-book"></i>
    <%= model.get("name") %>
  <% } else if (type === "friend") { %>
    <i class="fa fa-user"></i>
    <%= model.get("username") %>
  <% } %>
</div>
<ul class="notes">
</ul>
<div class="notes-list-footer group"f>
  <div class="notes-list-footer-left dropdown-parent">
    <div class="notes-list-footer-left-text">
      View Options
      <i class="fa fa-caret-up"></i>
    </div>
    <ul class="options-dropdown hidden">
      <li class="options-dropdown-header">
        Sort By
      </li>
      <li class="sort-option" data-sort-field="created_at"
                              data-sort-toggle="-1">
        Date Created (newest first)
      </li>
      <li class="sort-option" data-sort-field="created_at"
                              data-sort-toggle="1">
        Date Created (oldest first)
      </li>
      <li class="sort-option" data-sort-field="updated_at"
                              data-sort-toggle="-1">
        Date Updated (newest first)
      </li>
      <li class="sort-option" data-sort-field="updated_at"
                              data-sort-toggle="1">
        Date Updated (oldest first)
      </li>
      <li class="sort-option" data-sort-field="title"
                              data-sort-toggle="1">
        Title (descending)
      </li>
      <li class="sort-option" data-sort-field="title"
                              data-sort-toggle="-1">
        Title (ascending)
      </li>
    </ul>
  </div>
</div>